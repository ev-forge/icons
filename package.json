{
  "name": "root",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ev-forge/icon-library.git"
  },
  "scripts": {
    "dev:doc": "pnpm --filter ./apps/docs dev",
    "dev:lib": "pnpm --filter ./packages/icon-library dev",
    "sync": "pnpm --filter ./packages/icon-library sync",
    "build:doc": "pnpm --filter ./apps/docs build",
    "build:lib": "pnpm --filter ./packages/icon-library build",
    "build": "pnpm build:lib && pnpm build:doc",
    "lint": "pnpm -r lint",
    "release:patch": "pnpm --filter @ev-forge/icon exec pnpm version patch && git push && git push --tags",
    "release:minor": "pnpm --filter @ev-forge/icon exec pnpm version minor && git push && git push --tags",
    "release:major": "pnpm --filter @ev-forge/icon exec pnpm version major && git push && git push --tags",
    "release:publish": "pnpm --filter @ev-forge/icon-library publish"
  },
  "packageManager": "pnpm@9.1.0",
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4"
  }
}
