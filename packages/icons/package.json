{
  "name": "@ev-forge/icons",
  "version": "0.2.0",
  "description": "A lightweight icon library delivering Font Awesome's high-quality icons via a framework-agnostic Web Component, with perfect, icon-level tree-shaking.",
  "type": "module",
  "author": "elVengador forge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ev-forge/icons.git",
    "directory": "packages/ev-icon"
  },
  "bugs": "https://github.com/ev-forge/icons/issues",
  "homepage": "https://github.com/ev-forge/icons",
  "main": "./dist/ev-icon.cjs.js",
  "module": "./dist/ev-icon.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ev-icon.es.js",
      "require": "./dist/ev-icon.cjs.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "keywords": [
    "icons",
    "svg",
    "web components",
    "agnostic"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "prepublishOnly": "pnpm build",
    "sync": "node ./syncIcons",
    "clean": "rm -rf dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
